<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mingquan.gamevip.activity.MyInfoActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_137"
            android:background="@drawable/drawable_home_top" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_44"
            android:layout_marginTop="@dimen/space_44">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/space_14"
                android:src="@drawable/icon_02014" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="个人"
                android:textColor="@color/white"
                android:textSize="@dimen/space_14"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_top"
        android:background="@color/color_eeeeee" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="88dp"
        android:paddingLeft="@dimen/space_14"
        android:paddingRight="@dimen/space_14"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:background="@drawable/my_info_top">

                <cn.carbs.android.avatarimageview.library.AvatarImageView
                    android:id="@+id/avatar"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_19"
                    android:src="@drawable/icon_01020"
                    app:aiv_BoarderColor="@color/color_cfae76"
                    app:aiv_BoarderWidth="@dimen/space_2"
                    app:aiv_ShowBoarder="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/avatar"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/space_7"
                    android:paddingRight="@dimen/space_14">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="招财猫"
                        android:textColor="@color/color_494949"
                        android:textSize="@dimen/space_14"
                        android:textStyle="bold" />

                    <com.mingquan.gamevip.widget.MyRatingBar
                        android:id="@+id/rating_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/space_14"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/space_4"
                        app:clickable="false"
                        app:starCount="5"
                        app:starFill="@drawable/icon_01008"
                        app:starImageSize="@dimen/space_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_4"
                        android:text="当我听到 风从耳旁呼啸而过"
                        android:textColor="@color/color_878787"
                        android:textSize="@dimen/space_12" />

                    <ImageView
                        android:id="@+id/iv_vip_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="34dp"
                        android:layout_marginTop="@dimen/space_4"
                        android:background="@drawable/icon_02015" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="@dimen/space_12"
                android:background="@drawable/my_info_item"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/icon_02001"
                        android:gravity="center"
                        android:text="235"
                        android:textColor="@color/color_cfae76"
                        android:textSize="@dimen/space_18"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_14"
                        android:layout_marginTop="@dimen/space_8"
                        android:gravity="center"
                        android:text="我的积分"
                        android:textColor="#878787"
                        android:textSize="@dimen/space_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_my_consortia"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/icon_02001"
                        android:gravity="center"
                        android:scaleType="center"
                        android:src="@drawable/icon_02004" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_14"
                        android:layout_marginTop="@dimen/space_8"
                        android:gravity="center"
                        android:text="我的公会"
                        android:textColor="#878787"
                        android:textSize="@dimen/space_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_my_game"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/icon_02001"
                        android:gravity="center"
                        android:scaleType="center"
                        android:src="@drawable/icon_02002" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_14"
                        android:layout_marginTop="@dimen/space_8"
                        android:gravity="center"
                        android:text="我的游戏"
                        android:textColor="#878787"
                        android:textSize="@dimen/space_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_my_friends"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/icon_02001"
                        android:gravity="center"
                        android:scaleType="center"
                        android:src="@drawable/icon_02003" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_14"
                        android:layout_marginTop="@dimen/space_8"
                        android:gravity="center"
                        android:text="我的好友"
                        android:textColor="#878787"
                        android:textSize="@dimen/space_12" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_notification"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_marginTop="@dimen/space_12"
                android:background="@drawable/my_info_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_19">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_02006" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_14"
                    android:text="通知中心"
                    android:textColor="@color/color_494949"
                    android:textSize="@dimen/space_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_manager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_marginTop="@dimen/space_1"
                android:background="@drawable/my_info_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_19">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_02013" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_14"
                    android:text="我的管家"
                    android:textColor="@color/color_494949"
                    android:textSize="@dimen/space_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_game_community"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_marginTop="@dimen/space_1"
                android:background="@drawable/my_info_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_19">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_02007" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_14"
                    android:text="游戏社区"
                    android:textColor="@color/color_494949"
                    android:textSize="@dimen/space_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_my_vip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_marginTop="@dimen/space_1"
                android:background="@drawable/my_info_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_19">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_02011" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_14"
                    android:text="我的权益"
                    android:textColor="@color/color_494949"
                    android:textSize="@dimen/space_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_account_transactions"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_marginTop="@dimen/space_1"
                android:background="@drawable/my_info_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_19">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_02012" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_14"
                    android:text="账号交易"
                    android:textColor="@color/color_494949"
                    android:textSize="@dimen/space_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_check_update"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_marginTop="@dimen/space_1"
                android:background="@drawable/my_info_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_19">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_02008" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_14"
                    android:text="检测更新"
                    android:textColor="@color/color_494949"
                    android:textSize="@dimen/space_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_contact_customer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_marginTop="@dimen/space_1"
                android:background="@drawable/my_info_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_19">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_02010" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_14"
                    android:text="联系客服"
                    android:textColor="@color/color_494949"
                    android:textSize="@dimen/space_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_marginTop="@dimen/space_12"
                android:background="@drawable/my_info_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_19">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_02009" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_14"
                    android:text="设置"
                    android:textColor="@color/color_494949"
                    android:textSize="@dimen/space_14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
