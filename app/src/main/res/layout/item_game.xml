<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="96dp"
        android:layout_height="150dp"
        android:background="@drawable/item_game_background"
        android:elevation="@dimen/space_1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginTop="@dimen/space_10"
            android:background="@drawable/icon_01013" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_13"
            android:text="名字名字"
            android:textColor="@color/color_494949"
            android:textSize="@dimen/space_14"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_6"
            android:text="描述描述"
            android:textColor="@color/color_878787"
            android:textSize="@dimen/space_12" />
    </LinearLayout>
</RelativeLayout>