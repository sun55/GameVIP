<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">false</item>
        <!--<item name="android:statusBarColor" tools:ignore="NewApi">#000000</item>-->
        <!--<item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>-->
    </style>

    <declare-styleable name="RoundAngleImageView">
        <attr name="roundWidth" format="dimension" />
        <attr name="roundHeight" format="dimension" />
        <attr name="borderWidth" format="dimension" />
        <attr name="borderColor" format="color" />
    </declare-styleable>

    <declare-styleable name="RatingBar">
        <attr name="starImageSize" format="dimension" />
        <attr name="starCount" format="integer" />
        <attr name="starEmpty" format="reference" />
        <attr name="starFill" format="reference" />
        <attr name="halfFill" format="reference" />
        <attr name="clickable" format="boolean" />
        <attr name="marginRightSize" format="dimension" />
        <attr name="starPadding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="XIndicator">
        <attr name="text_color_normal" format="color" />
        <attr name="text_color_selected" format="color" />
        <attr name="text_size" format="dimension" />
        <attr name="indicator_visible_count" format="integer" />
        <attr name="indicator_color" format="color" />
        <attr name="indicator_style">
            <enum name="bitmap" value="0" />
            <enum name="line" value="1" />
            <enum name="triangle" value="2" />
        </attr>
        <attr name="style_bitmap_src" format="reference" />
        <attr name="style_line_padding" format="dimension" />
        <attr name="padding_bottom_top" format="dimension" />
        <attr name="indicator_height" format="dimension" />
        <attr name="indicator_width" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SlideShowView">
        <attr name="topLeftRadius" format="dimension"/>
        <attr name="topRightRadius" format="dimension"/>
        <attr name="bottomLeftRadius" format="dimension"/>
        <attr name="bottomRightRadius" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="XMyInfoItem">
        <attr name="icon" format="reference"/>
        <attr name="is_show_more" format="boolean"/>
        <attr name="title" format="string"/>
    </declare-styleable>

    <declare-styleable name="XOpenServiceItem">
        <attr name="game_icon" format="reference"/>
        <attr name="game_name" format="string"/>
        <attr name="game_detail" format="string"/>
        <attr name="game_discount" format="string"/>
        <attr name="service_name" format="string"/>
    </declare-styleable>
</resources>
